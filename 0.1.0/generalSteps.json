{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/EdgelessPE/nep-spec/0.1.0/generalSteps.json",
  "title": "NEP General Steps",
  "description": "Schema for Next-generation Edgeless Package General Steps in toml",

  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[\\sA-Za-z0-9]+$"
    },
    "type": {
      "type": "string",
      "enum": [
        "Group",
        "LogicAnd",
        "LogicOr",
        "Modify",
        "Wait",
        "Link",
        "File",
        "Script",
        "Execute",
        "Kill",
        "Path",
        "Log",
        "Toast",
        "Dialog",
        "Download",
        "Unzip",
        "Sendkey",
        "SendMouse"
      ]
    }
  },
  "required": ["name", "type"]
}
